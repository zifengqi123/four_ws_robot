<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find four_ws_robot_description)/urdf/lidar_head/lidar_head.transmission.xacro"/>
  <xacro:include filename="$(find four_ws_robot_description)/urdf/lidar_head/lidar_head.gazebo.xacro"/>
  
  <xacro:macro name="lidar_head_v0" params="parent *joint_origin *joint_axis">
	<joint name="lidar_head_joint" type="continuous">
	  <xacro:insert_block name="joint_origin"/>
	  <parent link="${parent}"/>
	  <child link="lidar_head_link"/>
         <limit effort="1.5" velocity="20"/>
	  <xacro:insert_block name="joint_axis"/>
	</joint>

	<link name="lidar_head_link">
	  <visual>
		<geometry>
		  <mesh filename="package://four_ws_robot_description/meshes/DAE/lidar_head/YDlidar_head.dae"/>
		</geometry>
	  </visual>
	  <collision>
		<geometry>
		  <mesh filename="package://four_ws_robot_description/meshes/STL/lidar_head/YDlidar_head.stl"/>
		</geometry>
	  </collision>
	  <inertial>
		<origin xyz="0.0 0 0"/>
		<mass value="0.05"/>
		<inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.000018" iyz="0" izz="0.00001"/>
	  </inertial>
	</link>
  </xacro:macro>
  
</robot>

