<?xml version="1.0"?>
<!-- Файл "suspension.urdf.xacro" объединяет описания подвески робота,
используя включения (include), и определяет макрос "steering", который
определяет параметры соединения сустава робота. Он содержит описание соединения
сустава, такие как тип соединения (revolute), ограничения на усилие, скорость и
ограничения на угол поворота сустава, а также геометрию визуализации и коллизий сустава. -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find four_ws_robot_description)/urdf/suspension/suspension.transmission.xacro" />
    <xacro:include filename="$(find four_ws_robot_description)/urdf/suspension/suspension.gazebo.xacro" />
    <xacro:macro name="steering" params="prefix parent *joint_origin *joint_axis">
        <joint name="${prefix}_steering_joint" type="revolute">
            <xacro:insert_block name="joint_origin" />
            <parent link="${parent}" />
            <child link="${prefix}_steering_link" />
            <limit effort="5" velocity="6.28" lower="-2.1" upper="2.1" />
            <xacro:insert_block name="joint_axis" />
        </joint>
        <link name="${prefix}_steering_link">
            <visual>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/DAE/suspension/${prefix}_link.dae" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/STL/suspension/sus_link.stl" />
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 -0.02" />
                <mass value="0.15" />
                <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.000004" />
            </inertial>
        </link>
    </xacro:macro>
</robot>