<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="prefix parent origin_xyz origin_rpy axis_xyz">

        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="${parent}" />
            <child link="${prefix}_wheel_link" />
            <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
            <axis xyz="${axis_xyz}" />
            <limit effort="1.5" velocity="20" />
        </joint>

        <transmission name="${prefix}_wheel_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${prefix}_wheel_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${prefix}_wheel_motor">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>

        <link name="${prefix}_wheel_link">
            <visual>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/DAE/wheel/wheel.dae" />
                </geometry>
                <origin xyz="0 0 0" />
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/STL/wheel/wheel.stl" />
                </geometry>
                <origin xyz="0 0 0" />
            </collision>
            <inertial>
                <mass value="0.05" />
                <origin xyz="0 -0.007685 0" />
                <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.000018" iyz="0" izz="0.00001" />
            </inertial>
        </link>

        <gazebo reference="${prefix}_wheel_link">
            <selfCollide>false</selfCollide>
            <mu1 value="1.0" />
            <mu2 value="1.0" />
        </gazebo>

    </xacro:macro>
</robot>