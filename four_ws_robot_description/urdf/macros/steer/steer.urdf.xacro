<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="steer" params="prefix parent origin_xyz origin_rpy axis_xyz">

        <joint name="${prefix}_steer_joint" type="revolute">
            <parent link="${parent}" />
            <child link="${prefix}_steer_link" />
            <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
            <axis xyz="${axis_xyz}" />
            <limit effort="5" velocity="6.28" lower="-2.1" upper="2.1" />
        </joint>

        <transmission name="${prefix}_steer_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${prefix}_steer_joint">
                <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            </joint>
            <actuator name="${prefix}_steer_motor">
                <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
                <mechanicalReduction>30</mechanicalReduction>
            </actuator>
        </transmission>

        <link name="${prefix}_steer_link">
            <visual>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/DAE/steer/${prefix}_steer.dae" />
                </geometry>
                <origin xyz="0 0 0" />
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/STL/steer/steer.stl" />
                </geometry>
                <origin xyz="0 0 0" />
            </collision>
            <inertial>
                <mass value="0.15" />
                <origin xyz="0 0 -0.02" />
                <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.000004" />
            </inertial>
        </link>

        <gazebo reference="${prefix}_steer_link">
            <selfCollide>false</selfCollide>
            <mu1 value="0.05" />
            <mu2 value="0.05" />
        </gazebo>

    </xacro:macro>
</robot>