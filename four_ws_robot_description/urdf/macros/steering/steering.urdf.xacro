<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="steering" params="prefix parent origin_xyz origin_rpy axis_xyz">

        <joint name="${prefix}_steering_joint" type="revolute">
            <parent link="${parent}" />
            <child link="${prefix}_steering_link" />
            <origin xyz="${origin_xyz}" rpy="${origin_rpy}" />
            <axis xyz="${axis_xyz}" />
            <limit effort="5" velocity="6.28" lower="-2.1" upper="2.1" />
        </joint>

        <link name="${prefix}_steering_link">
            <visual>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/DAE/steering/${prefix}_steering.dae" />
                </geometry>
                <origin xyz="0 0 0" />
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://four_ws_robot_description/meshes/STL/steering/steering.stl" />
                </geometry>
                <origin xyz="0 0 0" />
            </collision>
            <inertial>
                <mass value="0.15" />
                <origin xyz="0 0 -0.02" />
                <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.000004" />
            </inertial>
        </link>

    </xacro:macro>
</robot>