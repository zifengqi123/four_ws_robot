<?xml version="1.0"?>
<launch>

    <!-- parameters -->
    <arg name="gui"     default="false"/>
    <arg name="map_file" default="$(find four_ws_robot_software)/maps/four_ws_map.yaml" doc="[Ф, Ф]"/>
    <arg name="model"    default="$(find four_ws_robot_description)/robots/fourth_robot.urdf.xacro"/>

    <!-- simulation -->
    <include file="$(find four_ws_robot_software)/launch/gazebo/simulation.launch">
        <arg name="gui"   value="$(arg gui)"/>
        <arg name="model" value="$(arg model)"/>
    </include>

    <!-- stack of navigation algorithms with output in rviz -->
    <include file="$(find four_ws_robot_software)/launch/navigation.launch">
        <arg name="map_file" value="$(arg map_file)"/>
    </include>

    <!-- launch joynode -->
    <include file="$(find four_ws_robot_software)/launch/joy_control.launch">
        <arg name="joy_dev" value="$(arg joy_dev)"/>
    </include>

</launch>